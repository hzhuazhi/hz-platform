<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hz.pay.master.core.mapper.AgentMapper">




    <!-- 定义数据库基本列,只适用代替单表的*-->
    <sql id="Base_Column_List">
        a.id,a.agent_name,a.contacts,a.phone_num,a.pay_type,a.total_money,a.balance,a.royalty,
        a.role_id,
        a.create_time,a.update_time,a.yn
    </sql>


    <!-- 查询条件 -->
    <sql id="Example_Where_Clause">
        where 1=1
        <trim  suffixOverrides="," >
            <if test="id != null and id != '' " >
                and a.id = #{id}
            </if>
            <if test="agentName != null and agentName != '' " >
                and a.agent_name = #{agentName}
            </if>
            <if test="contacts != null and contacts != '' " >
                and a.contacts = #{contacts}
            </if>
            <if test="phoneNum != null and phoneNum != '' " >
                and a.phone_num = #{phoneNum}
            </if>
            <if test="payType != null and payType != '' " >
                and a.pay_type = #{payType}
            </if>
            and a.yn = 0
        </trim>
    </sql>


    <!-- 查询条件_id -->
    <sql id="Example_Where_Clause_id">
        where 1=1
        <trim  suffixOverrides="," >
            <if test="id != null and id != '' " >
                and a.id = #{id}
            </if>
            and a.yn = 0
        </trim>
    </sql>


    <!-- 排序条件 -->
    <sql id="Example_Order_By">
        order by a.create_time asc
    </sql>

    <!-- 显示所有数据 -->
    <select id="findAll" resultType="com.hz.pay.master.core.model.agent.AgentModel">
        select
        <include refid="Base_Column_List" />
        from tb_hz_agent a
        <include refid="Example_Where_Clause"/>
    </select>

    <!-- 查询列表 -->
    <select id="findByCondition" parameterType="Object" resultType="com.hz.pay.master.core.model.agent.AgentModel">
        select
        <include refid="Base_Column_List" />
        from tb_hz_agent a
        <include refid="Example_Where_Clause"/>
    </select>

    <!-- 根据条件查询信息-->
    <select id="findByObject" parameterType="Object" resultType="com.hz.pay.master.core.model.agent.AgentModel">
        select
        <include refid="Base_Column_List" />
        from tb_hz_agent a
        <include refid="Example_Where_Clause"/>
        limit 1
    </select>

    <!-- 根据id查询信息-->
    <select id="findById" parameterType="java.lang.Long" resultType="com.hz.pay.master.core.model.agent.AgentModel">
        select
        <include refid="Base_Column_List" />
        from tb_hz_agent a
        <include refid="Example_Where_Clause_id"/>
    </select>



    <!-- 查询总数-->
    <select id="queryByCount" resultType="java.lang.Integer"  parameterType="Object">
        select count(1)
        from tb_hz_agent a
        <include refid="Example_Where_Clause"/>
    </select>

    <!-- 查询分页列表 -->
    <select id="queryByList" parameterType="Object" resultType="com.hz.pay.master.core.model.agent.AgentModel">
        select
        <include refid="Base_Column_List" />
        from tb_hz_agent a
        <include refid="Example_Where_Clause"/>
        <include refid="Example_Order_By"/>
        <if test="pageNumber != null and pageNumber != ''" >
            limit #{start},#{end}
        </if>
    </select>


    <!-- 添加基本信息 -->
    <insert id="add" parameterType="com.hz.pay.master.core.model.agent.AgentModel" >
        <!--<selectKey resultType="java.lang.Long" order="AFTER" keyProperty="id">-->
        <!--SELECT LAST_INSERT_ID() as id-->
        <!--</selectKey>-->
        insert into tb_hz_agent
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="agentName != null and agentName != '' " >
                agent_name,
            </if>
            <if test="contacts != null and contacts != '' " >
                contacts,
            </if>
            <if test="phoneNum != null and phoneNum != '' " >
                phone_num,
            </if>
            <if test="payType != null and payType != '' " >
                pay_type,
            </if>
            create_time,
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="agentName != null and agentName != '' " >
                <![CDATA[  #{agentName}, ]]>
            </if>
            <if test="contacts != null and contacts != '' " >
                <![CDATA[  #{contacts}, ]]>
            </if>
            <if test="phoneNum != null and phoneNum != '' " >
                <![CDATA[  #{phoneNum}, ]]>
            </if>
            <if test="payType != null and payType != '' " >
                <![CDATA[  #{payType}, ]]>
            </if>
            NOW(),
        </trim>
    </insert>

    <!-- 更新基本信息 -->
    <update id="update" parameterType="com.hz.pay.master.core.model.agent.AgentModel">
        UPDATE tb_hz_agent a
        <trim prefix="set" suffixOverrides=",">
            <if test="agentName != null and agentName != '' " >
                a.agent_name = #{agentName},
            </if>
            <if test="contacts != null and contacts != '' " >
                a.contacts = #{contacts},
            </if>
            <if test="phoneNum != null and phoneNum != '' " >
                a.phone_num = #{phoneNum},
            </if>
            <if test="payType != null and payType != '' " >
                a.pay_type = #{payType},
            </if>
            a.update_time = NOW(),
        </trim>
        <include refid="Example_Where_Clause"/>
    </update>

    <!-- 主要作用1.逻辑删除，2更新状态 -->
    <update id="manyOperation" parameterType="Object">
        update tb_hz_agent a
        <trim prefix="set" suffixOverrides=",">
            <if test="yn != 0 and yn >0 " >
                a.yn = #{yn},
            </if>
        </trim>
        <include refid="Example_Where_Clause_id"/>
    </update>

    <!-- 更新余额 -->
    <update id="updateMoney" parameterType="Object">
        UPDATE tb_hz_agent a
        <trim prefix="set" suffixOverrides=",">
            <if test="money != null and money != '' " >
                a.total_money = a.total_money + #{money},
            </if>
            <if test="money != null and money != '' " >
                a.balance = a.balance + #{money},
            </if>
            a.update_time = NOW(),
        </trim>
        where 1=1
        and a.id = #{id}
    </update>


</mapper>