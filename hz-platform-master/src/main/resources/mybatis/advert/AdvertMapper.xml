<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hz.platform.master.core.mapper.AdvertMapper">




    <!-- 定义数据库基本列,只适用代替单表的*-->
    <sql id="Base_Column_List">
        a.id,a.ad_name,a.ad_ads,a.start_time,a.end_time,
        a.create_time,a.update_time,a.yn
    </sql>

    <!-- 查询条件 -->
    <sql id="Example_Where_Clause">
        where 1=1
        <trim  suffixOverrides="," >
            <if test="id != null and id != '' " >
                and a.id = #{id}
            </if>
            <if test="nowTime != null and nowTime != '' " >
                and a.start_time &lt;= #{nowTime} and a.end_time >= #{nowTime}
            </if>
            and a.yn = 0
        </trim>
    </sql>


    <!-- 查询条件_id -->
    <sql id="Example_Where_Clause_id">
        where 1=1
        <trim  suffixOverrides="," >
            <if test="id != null and id != '' " >
                and a.id = #{id}
            </if>
            and a.yn =  0
        </trim>
    </sql>

    <!-- 排序条件 -->
    <sql id="Example_Order_By">
        order by a.create_time asc
    </sql>


    <!-- 显示所有数据 -->
    <select id="findAll" resultType="com.hz.platform.master.core.model.advert.AdvertModel">
        select
        <include refid="Base_Column_List" />
        from tb_ad_pay a
        <include refid="Example_Where_Clause"/>
    </select>

    <!-- 查询列表 -->
    <select id="findByCondition" parameterType="Object" resultType="com.hz.platform.master.core.model.advert.AdvertModel">
        select
        <include refid="Base_Column_List" />
        from tb_ad_pay a
        <include refid="Example_Where_Clause"/>
    </select>

    <!-- 根据条件查询信息-->
    <select id="findByObject" parameterType="Object" resultType="com.hz.platform.master.core.model.advert.AdvertModel">
        select
        <include refid="Base_Column_List" />
        from tb_ad_pay a
        <include refid="Example_Where_Clause"/>
        limit 1
    </select>

    <!-- 根据id查询信息-->
    <select id="findById" parameterType="java.lang.Long" resultType="com.hz.platform.master.core.model.advert.AdvertModel">
        select
        <include refid="Base_Column_List" />
        from tb_ad_pay a
        <include refid="Example_Where_Clause_id"/>
    </select>


    <!-- 查询总数-->
    <select id="queryByCount" resultType="java.lang.Integer"  parameterType="Object">
        select count(1)
        from tb_ad_pay a
        <include refid="Example_Where_Clause"/>
    </select>

    <!-- 查询分页列表 -->
    <select id="queryByList" parameterType="Object" resultType="com.hz.platform.master.core.model.advert.AdvertModel">
        select
        <include refid="Base_Column_List" />
        from tb_ad_pay a
        <include refid="Example_Where_Clause"/>
        <include refid="Example_Order_By"/>
        <if test="pageNumber != null and pageNumber != ''" >
            limit #{start},#{end}
        </if>
    </select>


    <!-- 添加基本信息 -->
    <insert id="add" parameterType="com.hz.platform.master.core.model.advert.AdvertModel" >
        <!--<selectKey resultType="java.lang.Long" order="AFTER" keyProperty="id">-->
        <!--SELECT LAST_INSERT_ID() as id-->
        <!--</selectKey>-->
        insert into tb_ad_pay
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="adName != null and adName != '' " >
                ad_name,
            </if>
            <if test="adAds != null and adAds != '' " >
                ad_ads,
            </if>
            <if test="startTime != null and startTime != '' " >
                start_time,
            </if>
            <if test="endTime != null and endTime != '' " >
                end_time,
            </if>
            create_time,
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="adName != null and adName != '' " >
                <![CDATA[  #{adName}, ]]>
            </if>
            <if test="adAds != null and adAds != '' " >
                <![CDATA[  #{adAds}, ]]>
            </if>
            <if test="startTime != null and startTime != '' " >
                <![CDATA[  #{startTime}, ]]>
            </if>
            <if test="endTime != null and endTime != '' " >
                <![CDATA[  #{endTime}, ]]>
            </if>
            NOW(),
        </trim>
    </insert>

    <!-- 更新基本信息 -->
    <update id="update" parameterType="com.hz.platform.master.core.model.advert.AdvertModel">
        UPDATE tb_ad_pay a
        <trim prefix="set" suffixOverrides=",">
            <if test="adName != null and adName != '' " >
                a.ad_name = #{adName},
            </if>
            <if test="adAds != null and adAds != '' " >
                a.ad_ads = #{adAds},
            </if>
            a.update_time = NOW(),
        </trim>
        <include refid="Example_Where_Clause"/>
    </update>

    <!-- 主要作用1.逻辑删除，2更新状态 -->
    <update id="manyOperation" parameterType="Object">
        update tb_ad_pay a
        <trim prefix="set" suffixOverrides=",">
            <if test="yn != 0 and yn >0 " >
                a.yn = #{yn},
            </if>
        </trim>
        <include refid="Example_Where_Clause_id"/>
    </update>


    <!-- 根据条件随机获取一条广告-->
    <select id="getRandompay" parameterType="Object" resultType="com.hz.platform.master.core.model.advert.AdvertModel">
        select
        <include refid="Base_Column_List" />
        from tb_ad_pay a
        <include refid="Example_Where_Clause"/>
        order by rand( ) limit 1
    </select>



</mapper>