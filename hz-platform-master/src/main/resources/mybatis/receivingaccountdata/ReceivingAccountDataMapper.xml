    <!-- 更新基本信息 -->
    <update id="update" parameterType="com.hz.pay.master.core.model.receivingaccountdata.ReceivingAccountDataModel">
        UPDATE tb_hz_receiving_account_data a
        <trim prefix="set" suffixOverrides=",">
            <if test="isOk != null and isOk != '' " >
                a.is_ok = #{isOk},
            </if>
            a.update_time = NOW(),
        </trim>
        where 1=1
        and a.my_trade_no = #{myTradeNo}
    </update>

    <!-- 主要作用1.逻辑删除，2更新状态 -->
    <update id="manyOperation" parameterType="Object">
        update tb_hz_receiving_account_data a
        <trim prefix="set" suffixOverrides=",">
            <if test="yn != 0 and yn >0 " >
                a.yn = #{yn},
            </if>
        </trim>
        <include refid="Example_Where_Clause_id"/>
    </update>


    <!-- 查询每日，每月，每年账户收款的总金额-->
    <select id="getTotalMoney" parameterType="Object" resultType="java.lang.String">
        select ifnull(sum(convert(a.total_amount,decimal(19,4))), '0.0000') as total_money from tb_hz_receiving_account_data a
        <include refid="Example_Where_Clause"/>
    </select>

    <!-- 查询每日，每月，每年账户收款的总次数-->
