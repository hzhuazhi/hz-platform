<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hz.pay.master.core.mapper.ReceivingAccountDataMapper">




    <!-- 定义数据库基本列,只适用代替单表的*-->
    <sql id="Base_Column_List">
        a.id,a.my_trade_no,a.channel_id,a.geway_id,a.buf_pay_id,a.receiving_account_id,
        a.total_amount,a.service_charge,a.actual_money,a.out_trade_no,a.is_ok,
        a.curday,a.curhour,a.curminute,a.run_num,a.run_status,
        a.create_time,a.update_time,a.yn
    </sql>

    <!-- 查询条件 -->
    <sql id="Example_Where_Clause">
        where 1=1
        <trim  suffixOverrides="," >
            <if test="id != null and id != '' " >
                and a.id = #{id}
            </if>
            <if test="myTradeNo != null and myTradeNo != '' " >
                and a.my_trade_no = #{myTradeNo}
            </if>
            <if test="outTradeNo != null and outTradeNo != '' " >
                and a.out_trade_no = #{outTradeNo}
            </if>
            <if test="bufPayId != null and bufPayId != '' " >
                and a.buf_pay_id = #{bufPayId}
            </if>
            <if test="receivingAccountId != null and receivingAccountId != '' " >
                and a.receiving_account_id = #{receivingAccountId}
            </if>
            <if test="isOk != null and isOk != '' " >
                and a.is_ok = #{isOk}
            </if>
            <!--<if test="idList != null and idList.size()>0">-->
            <!--and a.did in-->
            <!--<foreach item="item" index="index" collection="idList" open="(" separator="," close=")">-->
            <!--#{item}-->
            <!--</foreach>-->
            <!--</if>-->

            <if test="curday != null and curday != '' " >
                and a.curday = #{curday}
            </if>
            <if test="curdayStart != null and curdayStart != '' and curdayEnd != null and curdayEnd != '' " >
                and a.curday >= #{curdayStart} and a.curday &lt;= #{curdayEnd}
            </if>
            <if test="runNum != null and runNum != '' " >
                and a.run_num = #{runNum}
            </if>
            <if test="runStatus != null and runStatus != '' " >
                and a.run_status = #{runStatus}
            </if>
            and a.yn = 0
        </trim>
    </sql>


    <!-- 查询条件_id -->
    <sql id="Example_Where_Clause_id">
        where 1=1
        <trim  suffixOverrides="," >
            <if test="id != null and id != '' " >
                and a.id = #{id}
            </if>
            and a.yn =  0
        </trim>
    </sql>

    <!-- 排序条件 -->
    <sql id="Example_Order_By">
        order by a.create_time desc
    </sql>


    <!-- 显示所有数据 -->
    <select id="findAll" resultType="com.hz.pay.master.core.model.receivingaccountdata.ReceivingAccountDataModel">
        select
        <include refid="Base_Column_List" />
        from tb_hz_receiving_account_data a
        <include refid="Example_Where_Clause"/>
    </select>

    <!-- 查询列表 -->
    <select id="findByCondition" parameterType="Object" resultType="com.hz.pay.master.core.model.receivingaccountdata.ReceivingAccountDataModel">
        select
        <include refid="Base_Column_List" />
        from tb_hz_receiving_account_data a
        <include refid="Example_Where_Clause"/>
    </select>

    <!-- 根据条件查询信息-->
    <select id="findByObject" parameterType="Object" resultType="com.hz.pay.master.core.model.receivingaccountdata.ReceivingAccountDataModel">
        select
        <include refid="Base_Column_List" />
        from tb_hz_receiving_account_data a
        <include refid="Example_Where_Clause"/>
        limit 1
    </select>

    <!-- 根据id查询信息-->
    <select id="findById" parameterType="java.lang.Long" resultType="com.hz.pay.master.core.model.receivingaccountdata.ReceivingAccountDataModel">
        select
        <include refid="Base_Column_List" />
        from tb_hz_receiving_account_data a
        <include refid="Example_Where_Clause_id"/>
    </select>


    <!-- 查询总数-->
    <select id="queryByCount" resultType="java.lang.Integer"  parameterType="Object">
        select count(1)
        from tb_hz_receiving_account_data a
        <include refid="Example_Where_Clause"/>
    </select>

    <!-- 查询分页列表 -->
    <select id="queryByList" parameterType="Object" resultType="com.hz.pay.master.core.model.receivingaccountdata.ReceivingAccountDataModel">
        select
        <include refid="Base_Column_List" />
        from tb_hz_receiving_account_data a
        <include refid="Example_Where_Clause"/>
        <include refid="Example_Order_By"/>
        <if test="pageNumber != null and pageNumber != ''" >
            limit #{start},#{end}
        </if>
    </select>


